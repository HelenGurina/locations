<%= form_for :record, url: record_path(@record), method: :patch do |f| %>

<table>
  <tr>
      <th><%= f.label :name %><br>
      <%= f.text_field :name %></th>

      <th><%= f.label :location %><br>
      <%= f.text_field :location %></th>
    </tr>
  </table>

  <p>
    <%= f.submit "Save Location" %>
  </p>
<% end %>